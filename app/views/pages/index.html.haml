      - with_options target: '_blank' do |links|
        %li
          = links.link_to url_for('https://www.facebook.com/neb2000'), title: 'Facebook' do
            %i.icon-facebook-sign
        %li
          = links.link_to url_for('https://twitter.com/neb2000'), title: 'Twitter' do
            %i.icon-twitter-sign
        %li
          = links.link_to url_for('https://www.flickr.com/photos/neb2000/'), title: 'Flickr' do
            %i.icon-flickr
